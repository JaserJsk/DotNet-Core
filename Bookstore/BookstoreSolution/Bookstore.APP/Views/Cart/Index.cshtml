@model Bookstore.APP.Models.CartPageModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">

        <h2>Shopping Cart</h2>

        <br />

        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">Price</th>
                    <th style="width:8%">Quantity</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>

            <tbody>
                @{
                    double totalPrice = 0.0;
                }
                @foreach (var item in ViewBag.cart)
                {
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-10">
                                    <h4 class="nomargin">@item.apiBook.Title</h4>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">$@item.apiBook.Price</td>
                        <td data-th="Quantity">
                            @item.count
                        </td>
                        @{
                            totalPrice += (double)item.apiBook.Price * (double)item.count;
                        }
                        <td data-th="Subtotal" class="text-center">$@(item.apiBook.Price * item.count)</td>
                        <td class="actions" data-th="">
                            <a asp-controller="cart" asp-action="Remove" asp-route-id="@item.apiBook.Id">
                                <span class="btn btn-danger btn-md glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }


            </tbody>

            <tfoot>
                <tr class="visible-xs">
                    <td class="text-center"><strong>Total</strong></td>
                </tr>
                <tr>
                    <td>
                        <a asp-controller="Book" asp-action="index" class="btn btn-warning"><i class="fa fa-angle-left"></i>Continue Shopping</a>
                    </td>

                    <td colspan="2" class="hidden-xs"></td>

                    <td class="hidden-xs text-center"><strong>Total $@totalPrice</strong></td>

                    <td>
                        <a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a>
                    </td>
                </tr>

            </tfoot>

        </table>
    </div>

</div>